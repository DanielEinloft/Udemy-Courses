<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_bichos"
    tools:context="com.example.thami.app8aprendaingles.fragments.BichosFragment"
    tools:layout_editor_absoluteY="25dp">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87" />

    <ImageButton
        android:id="@+id/caoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/fundo_bichos"
        android:src="@drawable/cao"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gatoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/fundo_bichos"
        android:src="@drawable/gato"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/macacoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/fundo_bichos"
        android:src="@drawable/macaco"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/gatoButton" />

    <ImageButton
        android:id="@+id/ovelhaButton"
        android:layout_width="109dp"
        android:layout_height="105dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:background="@color/fundo_bichos"
        android:src="@drawable/ovelha"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/leaoButton" />

    <ImageButton
        android:id="@+id/leaoButton"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_marginTop="32dp"
        android:background="@color/fundo_bichos"
        android:src="@drawable/leao"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/caoButton" />

    <ImageButton
        android:id="@+id/vacaButton"
        android:layout_width="104dp"
        android:layout_height="99dp"
        android:layout_marginTop="32dp"
        android:background="@color/fundo_bichos"
        android:src="@drawable/vaca"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/macacoButton" />
</android.support.constraint.ConstraintLayout>
